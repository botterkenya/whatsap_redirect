<body>
  <h2>Connecting you to WhatsAppâ€¦</h2>
  <p>If WhatsApp does not open automatically, tap the button below.</p>
  <button id="open">Open WhatsApp</button>

  <script>
    // ==== REPLACE THIS PHONE NUMBER WITH YOURS ====
    const phone = '254106348305';
    const text = encodeURIComponent('Hello, am ready for this big deal');

    // WhatsApp app link
    const appUri = 'whatsapp://send?phone=' + phone + '&text=' + text;
    // WhatsApp Web fallback
    const webUri = 'https://api.whatsapp.com/send?phone=' + phone + '&text=' + text;

    // Try opening app first
    function tryOpen() {
      window.location = appUri;
      // Fallback to web after 800ms
      setTimeout(() => { window.location = webUri; }, 800);
    }

    // Button fallback
    document.getElementById('open').addEventListener('click', () => {
      window.location = webUri;
    });

    // Auto-run on page load
    tryOpen();
  </script>
</body>
